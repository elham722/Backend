@{
    Layout = "_Layout";
    var siteTitle = "MyShop";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="page-root">
  <div class="center-wrap">
    <div class="auth-card">

      <!-- LEFT: form -->
      <div class="auth-left">
        <div class="logo">Logo Here</div>
        <div class="subtitle">Welcome back !!!</div>
        <h1 class="title">Log In</h1>

        <form id="login-form" method="post" action="/Auth/Login">
          @Html.AntiForgeryToken()
          
          <label class="field-label">Email</label>
          <input name="EmailOrUsername" type="email" placeholder="login@gmail.com" required class="input"/>

          <div class="password-row">
            <label class="field-label">Password</label>
            <a class="forgot-link" href="#" onclick="showForgotPassword()">Forgot Password ?</a>
          </div>

          <div class="password-wrapper">
            <input id="passwordInput" name="Password" type="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" required class="input"/>
            <button type="button" id="togglePassword" class="eye-btn closed" aria-label="Show password"></button>
          </div>

          <button type="submit" class="btn-primary">LOGIN &nbsp;â†’</button>

          <div class="divider">or continue with</div>

          <div class="socials">
            <button type="button" class="social-btn google" aria-label="Continue with Google" onclick="socialLogin('google')">
              <!-- simple svg icon -->
              <svg width="20" height="20" viewBox="0 0 48 48" fill="none"><path fill="#EA4335" d="M24 9.5v8.5h12.5C36 20 30 14 24 9.5z"/><path fill="#34A853" d="M9.5 24c0-2 0.4-3.9 1.1-5.6L5.3 13A22.2 22.2 0 002.5 24c0 3.6 0.9 7 2.7 9.9l5.3-5.4A14.2 14.2 0 019.5 24z"/></svg>
              <span>Google</span>
            </button>

            <button type="button" class="social-btn github" aria-label="Continue with GitHub" onclick="socialLogin('github')">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 .5a12 12 0 00-3.8 23.4c.6.1.8-.2.8-.6v-2.2c-3 .7-3.6-1.4-3.6-1.4-.5-1.3-1.2-1.6-1.2-1.6-1-.7.1-.7.1-.7 1.1.1 1.7 1.1 1.7 1.1 1 .1 1.6.7 2 1.1.4.7 1.2.8 1.9.6a3.9 3.9 0 01.9-2.6c-2.4-.3-4.9-1.2-4.9-5.3 0-1.1.4-2 1.1-2.8-.2-.3-.5-1.4.1-2.9 0 0 .9-.3 3 .9a10.3 10.3 0 015.5 0c2-.1 3-.9 3-.9.6 1.5.3 2.6.1 2.9.7.8 1.1 1.7 1.1 2.8 0 4.1-2.5 5-4.9 5.3.7.6 1.3 1.8 1.3 3.6v5.3c0 .4.2.7.9.6A12 12 0 0012 .5z"/></svg>
              <span>GitHub</span>
            </button>

            <button type="button" class="social-btn facebook" aria-label="Continue with Facebook" onclick="socialLogin('facebook')">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="#1877F2"><path d="M22 12.07C22 6.48 17.52 2 12 2S2 6.48 2 12.07c0 4.99 3.66 9.12 8.44 9.93v-7.03H8.07v-2.9h2.37V9.8c0-2.34 1.39-3.62 3.52-3.62 1.02 0 2.09.18 2.09.18v2.3h-1.18c-1.17 0-1.53.73-1.53 1.48v1.78h2.6l-.42 2.9h-2.18v7.03C18.34 21.19 22 17.06 22 12.07z"/></svg>
              <span>Facebook</span>
            </button>
          </div>

          <div class="signup-msg">Don't have an account yet? <a href="/Auth/Register">Sign up for free</a></div>
        </form>
      </div>

      <!-- RIGHT: image/illustration -->
      <div class="auth-right">
        <div class="image-frame">
          <!-- replace src with your uploaded image path -->
          <img alt="Right illustration" id="rightImage" src="~/images/caractermanforlogin.png" />
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  // Toggle password visibility with monkey emojis
  document.getElementById('togglePassword')?.addEventListener('click', function() {
    const input = document.getElementById('passwordInput');
    if (!input) return;
    
    if (input.type === 'password') {
      // Show password - monkey with open eyes
      input.type = 'text';
      this.classList.remove('closed');
      this.classList.add('open');
      console.log('Password shown - should show ðŸ™‰ (open eyes)');
    } else {
      // Hide password - monkey with closed eyes
      input.type = 'password';
      this.classList.remove('open');
      this.classList.add('closed');
      console.log('Password hidden - should show ðŸ™ˆ (closed eyes)');
    }
  });

  // (Optional) adjust image sizing to match layout proportions
  function fitImage() {
    const img = document.getElementById('rightImage');
    if (!img) return;
    img.style.maxHeight = Math.min(window.innerHeight * 0.7, 680) + 'px';
  }
  window.addEventListener('resize', fitImage);
  window.addEventListener('load', fitImage);

  // Social login functions
  function socialLogin(provider) {
    alert(`Login with ${provider} will be available soon!`);
  }

  // Forgot password function
  function showForgotPassword() {
    alert('Password reset functionality will be available soon!');
  }
</script> 