@{
    ViewData["Title"] = "دسترسی غیرمجاز";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-ban text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="card-title text-danger mb-3">دسترسی غیرمجاز</h2>
                    
                    <p class="card-text text-muted mb-4">
                        متأسفانه شما دسترسی لازم برای مشاهده این صفحه را ندارید.
                    </p>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            بازگشت به صفحه اصلی
                        </a>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-out-alt me-2"></i>
                                خروج از سیستم
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                ورود به سیستم
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto redirect after 10 seconds if user doesn't take action
        setTimeout(function() {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 10000);
    </script>
}