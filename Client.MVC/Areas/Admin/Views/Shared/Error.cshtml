@{
    ViewData["Title"] = "خطا";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="admin-card">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                
                <h3 class="mb-3">خطا در سیستم</h3>
                
                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                {
                    <p class="text-danger mb-3">@ViewData["ErrorMessage"]</p>
                }
                
                @if (!string.IsNullOrEmpty(ViewData["ErrorDetails"] as string))
                {
                    <div class="alert alert-light">
                        <small class="text-muted">@ViewData["ErrorDetails"]</small>
                    </div>
                }
                
                <div class="d-flex justify-content-center gap-2">
                    <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="btn btn-admin">
                        <i class="fas fa-home me-1"></i>
                        بازگشت به داشبورد
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right me-1"></i>
                        بازگشت
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>