@model dynamic
@{
    ViewData["Title"] = "ایجاد کاربر جدید";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>
        <i class="fas fa-user-plus me-2"></i>
        ایجاد کاربر جدید
    </h4>
    <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-right me-1"></i>
        بازگشت به لیست
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>
                    اطلاعات کاربر
                </h5>
            </div>
            <div class="card-body">
                <form method="post" asp-antiforgery="true">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Email" class="form-label">ایمیل</label>
                            <input name="Email" id="Email" class="form-control" placeholder="example@domain.com" required />
                            <span class="text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="UserName" class="form-label">نام کاربری</label>
                            <input name="UserName" id="UserName" class="form-control" placeholder="نام کاربری" required />
                            <span class="text-danger" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Password" class="form-label">رمز عبور</label>
                            <div class="input-group">
                                <input name="Password" id="Password" class="form-control" type="password" placeholder="رمز عبور" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Password')">
                                    <i class="fas fa-eye" id="Password-eye"></i>
                                </button>
                            </div>
                            <span class="text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="PhoneNumber" class="form-label">شماره تلفن</label>
                            <input name="PhoneNumber" id="PhoneNumber" class="form-control" placeholder="09123456789" />
                            <span class="text-danger" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">نقش‌ها</label>
                            <div class="row">
                                @if (Model.AvailableRoles != null)
                                {
                                    @foreach (var role in Model.AvailableRoles)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="Roles" value="@role" 
                                                       id="role_@role" />
                                                <label class="form-check-label" for="role_@role">
                                                    @role
                                                </label>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input name="SendConfirmationEmail" id="SendConfirmationEmail" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label" for="SendConfirmationEmail">
                                    ارسال ایمیل تایید
                                </label>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input name="RequirePasswordChange" id="RequirePasswordChange" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" for="RequirePasswordChange">
                                    نیاز به تغییر رمز عبور
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            انصراف
                        </a>
                        <button type="submit" class="btn btn-admin">
                            <i class="fas fa-save me-1"></i>
                            ایجاد کاربر
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    راهنمای ایجاد کاربر
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb me-1"></i> نکات مهم:</h6>
                    <ul class="mb-0">
                        <li>ایمیل باید منحصر به فرد باشد</li>
                        <li>نام کاربری باید حداقل 3 کاراکتر باشد</li>
                        <li>رمز عبور باید حداقل 6 کاراکتر باشد</li>
                        <li>شماره تلفن اختیاری است</li>
                    </ul>
                </div>
                
                <div class="alert alert-warning">
                    <h6><i class="fas fa-shield-alt me-1"></i> امنیت:</h6>
                    <ul class="mb-0">
                        <li>نقش‌ها دسترسی کاربر را تعیین می‌کنند</li>
                        <li>اگر ایمیل تایید ارسال شود، کاربر باید آن را تایید کند</li>
                        <li>اگر نیاز به تغییر رمز باشد، کاربر باید در اولین ورود رمز را تغییر دهد</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const eye = document.getElementById(fieldId + '-eye');
            
            if (field.type === 'password') {
                field.type = 'text';
                eye.classList.remove('fa-eye');
                eye.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                eye.classList.remove('fa-eye-slash');
                eye.classList.add('fa-eye');
            }
        }

        // Password strength indicator
        document.getElementById('Password').addEventListener('input', function() {
            const password = this.value;
            const strength = calculatePasswordStrength(password);
            updatePasswordStrengthIndicator(strength);
        });

        function calculatePasswordStrength(password) {
            let strength = 0;
            
            if (password.length >= 6) strength++;
            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            
            return strength;
        }

        function updatePasswordStrengthIndicator(strength) {
            // This would update a password strength indicator if we had one
            console.log('Password strength:', strength);
        }
    </script>
}