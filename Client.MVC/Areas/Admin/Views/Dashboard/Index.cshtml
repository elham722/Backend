@model dynamic
@{
    ViewData["Title"] = "داشبورد مدیریت";
}

<div class="row">
    <!-- Statistics Cards -->
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">@Model.Statistics.TotalUsers</h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="icon icon-box-success">
                            <span class="mdi mdi-account-multiple icon-item"></span>
                        </div>
                    </div>
                </div>
                <h6 class="font-weight-normal">کل کاربران</h6>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">@Model.Statistics.ActiveUsers</h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="icon icon-box-success">
                            <span class="mdi mdi-account-check icon-item"></span>
                        </div>
                    </div>
                </div>
                <h6 class="font-weight-normal">کاربران فعال</h6>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">@Model.Statistics.NewUsersThisMonth</h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="icon icon-box-success">
                            <span class="mdi mdi-account-plus icon-item"></span>
                        </div>
                    </div>
                </div>
                <h6 class="font-weight-normal">کاربران جدید این ماه</h6>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                            <h3 class="mb-0">@Model.Statistics.UsersWithMfa</h3>
                            <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="icon icon-box-success">
                            <span class="mdi mdi-shield-account icon-item"></span>
                        </div>
                    </div>
                </div>
                <h6 class="font-weight-normal">کاربران با MFA</h6>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Activity -->
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">فعالیت‌های اخیر</h4>
                @if (Model.RecentActivity.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>کاربر</th>
                                    <th>فعالیت</th>
                                    <th>زمان</th>
                                    <th>جزئیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var activities = Model.RecentActivity as List<Client.MVC.Services.Admin.UserActivityDto>;
                                    var recentActivities = activities?.Take(10) ?? Enumerable.Empty<Client.MVC.Services.Admin.UserActivityDto>();
                                }
                                @foreach (var activity in recentActivities)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    @activity.Username.Substring(0, 1).ToUpper()
                                                </div>
                                                <span>@activity.Username</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@activity.Activity</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@activity.Timestamp.ToString("yyyy/MM/dd HH:mm")</small>
                                        </td>
                                        <td>
                                            <small class="text-muted">@activity.Details</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-history fa-3x mb-3"></i>
                        <p>هیچ فعالیتی یافت نشد</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Users by Role -->
    <div class="col-lg-4 mb-4">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie me-2"></i>
                    کاربران بر اساس نقش
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Statistics.UsersByRole.Count > 0)
                {
                    @foreach (var role in Model.Statistics.UsersByRole)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <span class="badge-admin">@role.Key</span>
                            </div>
                            <div>
                                <strong>@role.Value</strong>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-pie fa-3x mb-3"></i>
                        <p>اطلاعاتی موجود نیست</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Users -->
    <div class="col-12">
        <div class="admin-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-clock me-2"></i>
                    کاربران اخیر
                </h5>
                <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-admin btn-sm">
                    <i class="fas fa-eye me-1"></i>
                    مشاهده همه
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentUsers.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-admin">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>نقش‌ها</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ عضویت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var recentUsers = Model.RecentUsers as List<Backend.Application.Features.UserManagement.DTOs.UserDto>;
                                    var topUsers = recentUsers?.Take(5) ?? Enumerable.Empty<Backend.Application.Features.UserManagement.DTOs.UserDto>();
                                }
                                @foreach (var user in topUsers)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    @user.UserName.Substring(0, 1).ToUpper()
                                                </div>
                                                <span>@user.UserName</span>
                                            </div>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>
                                            @{
                                                var userRoles = user.Roles as List<string>;
                                                var displayRoles = userRoles?.Take(2) ?? Enumerable.Empty<string>();
                                            }
                                            @foreach (var role in displayRoles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                            @if (user.Roles.Count > 2)
                                            {
                                                <span class="badge bg-secondary">+@(user.Roles.Count - 2)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">فعال</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">غیرفعال</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@user.CreatedAt.ToString("yyyy/MM/dd")</small>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Users", new { area = "Admin", id = user.Id })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <p>هیچ کاربری یافت نشد</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Call the global function when page is ready
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard page loaded, initializing stats...');
            if (typeof window.initializeDashboardStats === 'function') {
                window.initializeDashboardStats();
            } else {
                console.log('initializeDashboardStats function not found');
            }
        });
    </script>
}